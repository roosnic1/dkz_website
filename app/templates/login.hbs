<div class="row">
  <div class="col-md-12">
    {{#if session.isAuthenticated}}
      <a {{action 'logout'}}>Logout</a>
    {{else}}
      <a {{action 'sessionRequiresAuthentication'}}>Login</a>
    {{/if}}
  </div>
  <div class="cold-md-12">
  {{#if session.loginError}}
    Error Message: {{session.loginError}}
  {{/if}}
  </div>
</div>
